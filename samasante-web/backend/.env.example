# Backend Environment Variables

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/samasante"
SHADOW_DATABASE_URL="postgresql://user:password@localhost:5432/samasante_shadow"
TEST_DATABASE_URL="file:./test.db"

# Security
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-min-32-chars"
ENCRYPTION_KEY="your-32-character-encryption-key-change-this-now!"
SIGNATURE_PRIVATE_KEY="your-signature-private-key-for-document-signing"

# Redis Cache
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"

# Server
PORT="3000"
NODE_ENV="development"
FRONTEND_URL="http://localhost:3001"

# Monitoring
SENTRY_DSN=""
APP_VERSION="1.0.0"
LOG_LEVEL="info"

# Business Rules
MIN_BOOK_AHEAD_MIN="60"
MIN_CANCEL_AHEAD_MIN="120"

# SMS Notifications (Twilio - Important for Senegal)
# Obtenez vos identifiants sur https://www.twilio.com/console
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="+1234567890" # Votre numéro Twilio au format E.164
TWILIO_MESSAGING_SERVICE_SID="MGxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx" # Optionnel mais requis pour les rappels programmés

# Email Notifications (SMTP)
# Pour Gmail: utilisez un "Mot de passe d'application" (App Password)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="votre-email@gmail.com"
SMTP_PASS="votre-mot-de-passe-d-application"
SMTP_FROM_EMAIL="noreply@samasante.sn"
SMTP_FROM_NAME="SamaSanté"

# Push Notifications (Web Push)
# Générez vos clés avec 'npx web-push generate-vapid-keys'
VAPID_PUBLIC_KEY="Bxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
VAPID_PRIVATE_KEY="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
FCM_SERVER_KEY=""
